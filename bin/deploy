#!/usr/bin/env bash
#
# Deploy to Heroku.
# Creates a git tag for each deploy in order to identify deploys
# from the git history.
#

set -e

HEROKU_ENV="$1"
DEPLOY_SOURCE="master"
GITHUB_REMOTE="origin"

if [ "${HEROKU_ENV}" == "" ]; then
  echo "Usage: $0 HEROKU_ENV"
  exit 1
fi

echo "Past release history in ${HEROKU_ENV}:"
heroku releases -r "${HEROKU_ENV}"

echo ""
echo "Differences since last deploy (the top-most commit will be tagged):"
CURRENT_HEROKU_VERSION=`heroku releases -n 1 --json -r "${HEROKU_ENV}" | python -c 'import json,sys;obj=json.load(sys.stdin);print obj[0]["version"]'`
CURRENT_DEPLOY_TAG="${HEROKU_ENV}-${CURRENT_HEROKU_VERSION}"
git --no-pager log --oneline --decorate=full "${CURRENT_DEPLOY_TAG}".."${DEPLOY_SOURCE}"

echo ""
echo "Ready to deploy? Press ^C to interrupt."
read okay

echo "Pushing to Heroku"
git push "${HEROKU_ENV}" "${DEPLOY_SOURCE}"

NEW_HEROKU_VERSION=`heroku releases -n 1 --json -r "${HEROKU_ENV}" | python -c 'import json,sys;obj=json.load(sys.stdin);print obj[0]["version"]'`
DEPLOY_TAG="${HEROKU_ENV}-${NEW_HEROKU_VERSION}"

echo ""
echo "Running migrations"
heroku run rake db:migrate -r "${HEROKU_ENV}"

echo "Deployed version ${DEPLOY_TAG}."
echo "Will push ${DEPLOY_SOURCE} and tags to ${GITHUB_REMOTE}"
git tag "${DEPLOY_TAG}" "${DEPLOY_SOURCE}"
git push "${GITHUB_REMOTE}" "${DEPLOY_SOURCE}" --tags
